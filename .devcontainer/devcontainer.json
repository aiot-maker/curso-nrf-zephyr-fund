{
  "name": "nRF Connect SDK",
  "image": "ghcr.io/nrfconnect/sdk-nrf:latest",
  "remoteUser": "root",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "nordic-semiconductor.nrf-connect"
      ]
    }
  },

  "containerEnv": {
    "ZEPHYR_BASE": "/opt/nordic/ncs/zephyr"
  },

  "postCreateCommand": "west --version"
}
